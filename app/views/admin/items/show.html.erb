<!--商品一覧ページから/商品新規登録後//admin/items/:idでこのページを表示します-->
<div class="container">
  
  <div class="row">
    <div class="text-bg-light">商品詳細</div>
  </div>
  
  <div class="row mt-3">
    
    <div class="col-3 mx-2">
      <%= image_tag @item.get_image, size: "200x160" %>
    </div>
    
    <div class="col-5 mx-2">
      <div class="form-group row my-2">
        <div class="col-6">商品名</div>
        <div class="col-6"><%= @item.name %></div>
      </div>
      <div class="form-group row my-2">
        <div class="col-6">商品説明</div>
        <div class="col-6"><%= @item.introduction %></div>
      </div>
      <div class="form-group row my-2">
        <div class="col-6">ジャンル</div>
        <div class="col-6"><%= @item.genre.name %></div>
      </div>
      <div class="form-group row my-2">
        <!--消費税を求めるmethodをItemモデルに記述しています。-->
        <div class="col-6">税込価格(税抜価格)</div>
        <div class="col-6">
          <%= @item.with_tax_price %>(<%= @item.price %>)
        </div>
      </div>
      <div class="form-group row my-2">
        <div class="col-6">販売ステータス</div>
        <div class="col-6">
          <% if @item.is_active %>
            <p class="text-success"><strong>販売中</strong></p>
          <% else %>
            <p class="text-secondary"><strong>販売停止中</strong></p>
          <% end %>
        </div>
      </div>
      <div class="form-group row my-2">
        <div class="col offset-2">
          <%= link_to "編集する", edit_admin_item_path(params[:id]), class: "btn btn-success" %>
        </div>
      </div>
    </div>

  </div>
  
</div>
