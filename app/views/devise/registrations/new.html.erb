<div class="container">
  <div class="col-lg-4">
    <h3>新規会員登録</h3>
  </div>
      <p id="notice"></p>
      <%= form_with model: @customer, url: user_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="row">
          <div class="col">
            <%= f.label :last_name, "名前(姓)" %>
            <%= f.text_field :last_name, autofocus: true %>
          </div>
          
          <div class="col">
            <%= f.label :first_name, "(名) " %>
            <%= f.text_field :first_name, autofocus: true %>
          </div>
        </div>
        
        <div class="row">
          <div class="col">
            <%= f.label :last_name_kana, "フリガナ(セイ)" %>
            <%= f.text_field :last_name_kana, autofocus: true %>
          </div>
          
          <div class="col">
            <%= f.label :first_name_kana, "(メイ)" %>
            <%= f.text_field :first_name_kana, autofocus: true %>
          </div>
        </div>
        
        <div class="row">
          <div class="col">
            <%= f.label :email ,"メールアドレス" %>
            <%= f.email_field :email, autofocus: true %>
          </div>  
        </div>
        
        <div class="row">
          <div class="col">
            <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
            <%= f.email_field :post_code, autofocus: true %>
          </div>  
        </div>
        
        <div class="row">
          <div class="col">
            <%= f.label :address, "住所" %>
            <%= f.email_field :address, autofocus: true %>
          </div>
        </div>
        
        <div class="row">
          <div class="col">
            <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
            <%= f.email_field :telephone_number, autofocus: true %>
          </div>
        </div>
      
      
        <div class="field">
          <%= f.label :password, "パスワード(6文字以上)" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-sm btn-success"%>
        </div>
      <% end %>
      
      <h2>既に登録済みの方</h2>
      
      <%= render "devise/shared/links" do %>
        <%= link_to "こちら", login_path %>
        <p>からログインしてください</p>
      <% end %>
