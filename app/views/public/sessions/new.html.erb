<div class="container">
  <p id="notice"></p>
    <h3>ログイン</h3>
    <p id="notice"></p>
    <h5>会員の方はこちらからログイン</h5>
      <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
      
        <div class="row">
          <div class="col-3"><%= f.label :email ,"メールアドレス" %></div>
          <div class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>  
        </div>
        
        <div class="row">
          <div class="col-3"><%= f.label :password, "パスワード" %></div>
          <div class="col-3"><%= f.password_field :password, autocomplete: "current-password" %></div>
        </div>
        
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-sm btn-primary" %>
        </div>
        
        
      <% end %>
      
      <h5>会員登録がお済みでない方</h5>
        <p id="notice"></p>
        
        <div class="row">
          <div class="col"><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください</div>
        </div>
      
      <br/>
    </div>
  </div>
</div>