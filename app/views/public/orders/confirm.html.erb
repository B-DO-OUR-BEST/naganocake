<div class="container">
  <div class="row mt-3">
    <div class="col-8 bg-secondary text-center my-3">注文情報確認</div>
  </div>
  
  <div class="row">
    <div class="col-8">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込み)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% total=0 %>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.get_image, size: "90x60", fallback: "no_iamge.jpg" %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td><%= cart_item.amount %></td>
              <td><%= subtotal = (cart_item.item.with_tax_price*cart_item.amount) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="col-4">
      <table class='table table-hover table-inverse'>
        <tr>
          <th>送料</th>
          <td><%= shipping_fee %></td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td><%=  %></td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col-2"><strong>支払方法</strong></div>
    <div class="col-8"><%= @order.payment_method %></div>
  </div>
  
  <div class="row">
    <div class="col-2"><strong>お届け先</strong></div>
    <div class="col-8">
      〒<%= @order.post_code %><%= @order.address %><br/>
      <%= @order.name %>
    </div>
  </div>
  
  <div class="row">
    <div class="col offset-4">
      <%= f.submit "注文を確定する", class: "btn btn-info" %>
    </div>
  </div>
</div>