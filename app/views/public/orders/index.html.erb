<div class="container">
  <div class="row">
    <div class="text-bg-light">
      注文履歴一覧
    </div>
  </div>
  <div class="row mx-2">
    <% if @orders.any? %>
      <table class='col-10 table table-hover table-inverse'>
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払い金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.post_code %><br/><%= order.address %></td>
            <td><%= order.order_details.item.name %></td>
            <td><%= order.total_payment %></td>
            <td><%= order.status %></td>
            <td><%= link_to "表示する", order_path(order), class: "btn btn-info" %></td>
          </tr>
        </tbody>
      </table>
    <% else %>
      <p>注文履歴がありません。</p>
    <% end %>
  </div>
</div>