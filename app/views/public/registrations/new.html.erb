<div class="container">
  <p id="notice"></p>
  <h3>新規会員登録</h3>
    <p id="notice"></p>
      <%= form_with model: @customer, url: user_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="row">
          <div class="col-2">名前</div>
          <div class="col-1"><%= f.label :last_name, "（姓）" %></div>
          <div class="col-3"><%= f.text_field :last_name, autofocus: true %></div>
          <div class="col-1"><%= f.label :first_name, "（名）" %></div>
          <div class="col-3"><%= f.text_field :first_name, autofocus: true %></div>
        </div>
          
        <div class="row">
          <div class="col-2">フリガナ</div>
          <div class="col-1"><%= f.label :last_name_kana, "（セイ）" %></div>
          <div class="col-3"><%= f.text_field :last_name_kana, autofocus: true %></div>
          <div class="col-1"><%= f.label :first_name_kana, "（メイ）" %></div>
          <div class="col-3"><%= f.text_field :first_name_kana, autofocus: true %></div>
        </div>
        
        <div class="row">
          <div class="col-3"><%= f.label :email ,"メールアドレス" %></div>
          <div class="col-3"><%= f.email_field :email, autofocus: true %></div>  
        </div>
        
        <div class="row">
          <div class="col-3"><%= f.label :post_code, "郵便番号(ハイフンなし)" %></div>
          <div class="col-3"><%= f.text_field :post_code, autofocus: true, pattern: '\d{3}\d{4}'%></div>  
        </div>
        
        <div class="row">
          <div class="col-3"><%= f.label :address, "住所" %></div>
          <div class="col-3"><%= f.text_field :address, autofocus: true, pattern: '^[\p{Han}\w\s]+$' %></div>
        </div>
        
        <div class="row">
          <div class="col-3"><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></div>
          <div class="col-3"><%= f.text_field :telephone_number, autofocus: true, pattern: '\d{10,11}' %></div>
        </div>
      
        <div class="row">
          <div class="col-3"><%= f.label :password, "パスワード(6文字以上)" %></div>
          <% if @minimum_password_length %><% end %>
          <div class="col-3"><%= f.password_field :password %></div>
        </div>
      
        <div class="row">
          <div class="col-3"><%= f.label :password_confirmation, "パスワード(確認用)" %></div>
          <div class="col-3"><%= f.password_field :password_confirmation %></div>
        </div>
      
        <div class="actions text-center">
          <div class="row">
            <div class="col-7"><%= f.submit "新規登録", class: "btn btn-lg btn-success"%></div>
          </div>
        </div>
        
      <% end %>
      <p id="notice"></p>
      <h3>既に登録済みの方</h3>
      
      <%= render "devise/shared/links" do %>
        <%= link_to "こちら", login_path %>
        <p>からログインしてください</p>
      <% end %>
      
</div>