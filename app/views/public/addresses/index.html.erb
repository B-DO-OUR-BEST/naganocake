<div class="container">
  <div class="row mt-3">
    配送先登録/一覧
  </div>
  
  <div class="row mt-3">
    <%= form_with model: @address, local: true do |f| %>
      <div class="form-group">
        <label for="postcode" class="col-form-label">郵便番号（ハイフンなし）</label>
        <%= f.number_field :postcode, :placeholder => "0000000" %>
      </div>
      <div class="form-group">
        <label for="address" class="col-form-label">住所</label>
        <%= f.text_field :address, size: "60", :placeholder => "東京都渋谷区代々木神園町0-0" %>
      </div>
      <div class="form-group">
        <label for="address" class="col-form-label">宛名</label>
        <%= f.text_field :name, :placeholder => "令和道子" %>
        <div class="col-offset-4">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>
    <%= end %>
  </div>
  
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr class="table-active">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= @addresses.each do |address| %>
          <tr>
            <td><%= address.post_code.gsub("-", "") %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
              <%= link_to "削除する", method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>