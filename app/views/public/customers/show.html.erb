<p id="notice"></p>
<div class="container">
  <h4>マイページ</h4>
  <p id="notice"></p>
    <div class="actions text-center">
      <%= form_with model: @customer, url: customers_information_edit_path, method: :patch do |f| %>
      <div class="row">
        <div class="col-1">登録情報</div>
        <div class="col-2"><%= f.submit "編集する", class: "btn btn-lg btn-success"%></div>
      </div>
      <% end %>
      
      <div class="container">
        <div class="row">
          <div class="col-5">
            <table class="table table-bordered">
              <tbody>
                <tr>
                  <th>氏名</th>
                  <td><%= @customer.last_name %><%= @customer.first_name %></td>
                </tr>
                <tr>
                  <th>カナ</th>
                  <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
                </tr>
                <tr>
                  <th>郵便番号</th>
                  <td><%= @customer.post_code %></td>
                </tr>
                <tr>
                  <th>住所</th>
                  <td><%= @customer.address %></td>
                </tr>
                <tr>
                  <th>電話番号</th>
                  <td><%= @customer.telephone_number %></td>
                </tr>
                <tr>
                  <th>メールアドレス</th>
                  <td><%= @customer.email %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      
      <p id="notice"></p>
      <div class="row">
        <div class="col-1">配送先</div>
        <div class="col-2"><%= link_to "一覧を見る", addresses_path, class: "btn btn-lg btn-primary" %></div>
      </div>
      
      <p id="notice"></p>
      <div class="row">
        <div class="col-1">注文履歴</div>
        <div class="col-2"><%= link_to "一覧を見る", orders_path, class: "btn btn-lg btn-primary" %></div>
      </div>
      
    </div>
    </div>